<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TPLivros.View.Livro.DetalheLivroView">
    <ContentPage.Content>
        <StackLayout x:Name="rootLivro" Padding="7" BindingContext="{Binding Selecionado}">
            <Label HorizontalTextAlignment="Center" FontSize="Large" Text="{Binding Nome}" />
            <Label Text="ISBN: "/>
            <Label Text="{Binding ISBN}" />
            <Label Text="Nome do Autor: "/>
            <Label Text="{Binding NomeAutor}" />
            <Label Text="Email do Autor: "/>
            <Label Text="{Binding EmailAutor}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>